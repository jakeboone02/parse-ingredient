{
  "compilerOptions": {
    "target": "es2022",
    "types": ["bun-types", "web"],
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": ["./*.ts", "./src"]
}
