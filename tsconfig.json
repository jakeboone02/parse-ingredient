{
  "compilerOptions": {
    "types": ["bun-types", "jest"],
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "lib": ["ESNext"]
  },
  "include": [".", "./src"]
}
